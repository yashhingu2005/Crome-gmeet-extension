{
  "manifest_version": 3,
  "name": "Google Meet Frame Extractor",
  "version": "1.0",
  "description": "Extracts individual participant frames from Google Meet and sends them to a Flask server.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://meet.google.com/*",
    "http://127.0.0.1:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Meet Frame Extractor"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
